#include <stdio.h>

int main()
{
    int i, n, search, flag = 0;
    printf("Enter size of array: ");
    scanf("%d", &n);
    int a[n];
    printf("Enter the numbers: ");
    for (i = 0; i < n; i++)
    {
        scanf("%d", &a[i]);
    }
    printf("Enter the element to be searched: ");
    scanf("%d", &search);
    for (i = 0; i < n; i++)
    {
        if (a[i] == search)
        {
            flag = 1;
        }
    }
    if (flag == 1)
    {
        printf("Number has been found successful\n");
    }
    else
    {
        printf("\nTry Again!!!Number has not been found\n");
    }
    return 0;
}
