#include<stdio.h>
#include<conio.h>
void printTable(int *mulTable,int num,int n){
   // printf("The multiplication table of %d is: \n",num);
    for(int i=0;i<n;i++){    
    mulTable[i]=num*(i+1);
    }

    for(int i=0;i<n;i++){
        printf("%dX%d = %d\n",num,i+1,mulTable[i]);
    }
printf("************************************************\n");
}

int main()
