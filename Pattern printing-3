#include<stdio.h>

void main()
{ 
  int n=5; 
  int i,j,k;
  for(i=1;i<=n;i++)
  {
   for(j=n-1;j>=i;j--)
   {
    printf(" ");
   }
   for(k=1;k<=i;k++)
   {
    printf("*");
   }
   
   printf("\n");
  }
 return (0);
}

/*-- Another Logic using if-else --*/

#include <stdio.h>
#include<conio.h>

void main()
{
 int n=5;
 int i,j;
 
 clrscr();
 
 for(i=1;i<=n;i++)
 {
  for(j=n;j>=1;j--)
  {
   if(i>=j)
   printf("*");
   else
   printf(" ");
  }
  printf("\n");
 }
getch();
}
