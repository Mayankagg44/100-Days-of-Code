#include <stdio.h>
int main()
{
    int num, i, sum = 0;
    printf("Enter the number : ");
    scanf("%d", &num);
    for (i = 1; i < num; i++)
    {
        if (num % i == 0)
        {
            sum = sum + i;
        }
    }
    if (sum == num)
    {
        printf("The given number %d is perfect ", num);
    }
    else
    {
        printf("The given number %d is not perfect ", num);
    }
    return 0;
}
