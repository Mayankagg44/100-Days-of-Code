#include <stdio.h>
int main()
{
    int i, j, rows, k = 1;
    printf("Enter no. of rows : ");
    scanf("%d", &rows);
    for (i = 0; i <= rows; i++)
    {
        for (j = 1; j <= i; j++)
        {
            if (i % 2 == 0)
            {
                printf("*");
            }
            else
            {
                printf("%d", i);
            }
        }
        printf("\n");
    }
    return 0;
}
